extends layout

block content
  h1= title

  form(action="", method='POST') 
    div.form-group
        label(for='name') Category:
        input#name.form-control(type='text', name='name', placeholder='Medical, Research, etc', value=(undefined===category ? '' : category.name))
    button.btn.btn-primary(type='submit') Submit
  if errors
   ul
    for error in errors
     li!= error.msg